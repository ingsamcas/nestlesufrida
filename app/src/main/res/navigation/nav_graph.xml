<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/LoginFragment">

    <fragment
        android:id="@+id/LoginFragment"
        android:name="net.gshp.nestlesufrida.ui.view.LoginFragment"
        android:label="@string/login_fragment_label"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_LoginFragment_to_TermsFragment"
            app:destination="@id/TermsFragment" />
        <action
            android:id="@+id/action_LoginFragment_to_SupportFragment"
            app:destination="@id/SupportFragment" />
    </fragment>
    <fragment
        android:id="@+id/TermsFragment"
        android:name="net.gshp.nestlesufrida.ui.view.TermsFragment"
        android:label="@string/terms_fragment_label"
        tools:layout="@layout/fragment_terms">

        <action
            android:id="@+id/action_TermsFragment_to_LoginFragment"
            app:destination="@id/LoginFragment" />
    </fragment>
    <fragment
        android:id="@+id/SupportFragment"
        android:name="net.gshp.nestlesufrida.ui.view.SupportFragment"
        tools:layout="@layout/fragment_support">
        <action
            android:id="@+id/action_SupportFragment_to_LoginFragment"
            app:destination="@id/LoginFragment" />
    </fragment>
</navigation>